        <TextBox x:Name="phoneNumberInput" HorizontalAlignment="Left" Height="23" Margin="126,54,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="nameInput" HorizontalAlignment="Left" Height="23" Margin="126,92,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="addressInput" HorizontalAlignment="Left" Height="23" Margin="126,136,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
